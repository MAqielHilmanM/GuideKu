<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.pick.date.PickDateFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:padding="8dp">
            <TextView
                android:id="@+id/tvPickDateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick a date"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvPickDateSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GuideKu will show you available guide at the moment"
                android:textSize="11sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/tvPickDateTitle"/>

            <TextView
                android:id="@+id/tvPickDateStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/tvPickDateSubtitle"/>
            <TextView
                android:id="@+id/tvPickDateStartPicker"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_date_range_white_24dp"
                android:background="#3BB2BF"
                android:padding="4dp"
                android:layout_below="@id/tvPickDateSubtitle"
                android:layout_toRightOf="@id/tvPickDateStart"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/tvPickDateEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/tvPickDateStartPicker"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/tvPickDateSubtitle"/>
            <TextView
                android:id="@+id/tvPickDateEndPicker"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_date_range_white_24dp"
                android:background="#3BB2BF"
                android:padding="4dp"
                android:layout_below="@id/tvPickDateSubtitle"
                android:layout_toRightOf="@id/tvPickDateEnd"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>