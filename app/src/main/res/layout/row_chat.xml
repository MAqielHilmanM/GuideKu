<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutRowChatList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civRowChat"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/pic_men"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/tvRowChatTitle"
                android:layout_width="wrap_content"
                android:text="Don Joe"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvRowChatSubtitle"
                android:layout_width="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="12sp"
                android:textColor="@color/colorHint"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">
            <TextView
                android:id="@+id/tvRowChatTime"
                android:layout_width="wrap_content"
                android:text="00.00"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorHint"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tvRowChatCount"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/tv_circle"
                android:text="2"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorHint"/>
</LinearLayout>