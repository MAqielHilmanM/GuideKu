<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".screen.favorites.category.FavoritesCategoryFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvFavCategoryGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Guide"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_tourist"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/tvFavCategoryPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Place"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_forest"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@android:color/black"/>
</LinearLayout>
</FrameLayout>