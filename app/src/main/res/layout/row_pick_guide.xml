<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvRowPickGuide"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivRowPickGuide"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pic_woman"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_gradient_green"/>
        <LinearLayout
            android:id="@+id/layoutPickGuideLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGradientStart"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tvRowPickGuideName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Neneng"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvRowPickGuideGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="23F"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvRowPickGuideLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Maribaya Trip"
                android:textSize="14sp"
                android:paddingBottom="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="#7DA016"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating Overview"
                    android:padding="8dp"
                    android:textAlignment="center"/>
                <RatingBar
                    android:id="@+id/ivPickGuideRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:rating="5"
                    android:progressBackgroundTint="@android:color/white"
                    android:progressTint="@android:color/holo_orange_light"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:layout_weight="2"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/ivPickGuideService1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car"
                    android:layout_weight="1"
                    android:padding="4dp"/>
                <ImageView
                    android:id="@+id/ivPickGuideService2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_map_grid"
                    android:padding="4dp"/>
                <ImageView
                    android:id="@+id/ivPickGuideService3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_traveler"
                    android:padding="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_above="@id/layoutPickGuideLayout">
            <ImageView
                android:id="@+id/ivPickGuideChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bubble"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/ivPickGuideLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>