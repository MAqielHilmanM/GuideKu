<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.guide.detail.GuideDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_tourist_large"
                        android:text="Guide Services"
                        android:textColor="#4f4f4f"
                        android:gravity="center"
                        android:padding="8dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow_up"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_ellipse"
                        android:text="Private Trips"
                        android:textColor="#4f4f4f"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_ellipse"
                        android:text=" Free edutour booklet "
                        android:textColor="#4f4f4f"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_ellipse"
                        android:text="Awesome experience"
                        android:textColor="#4f4f4f"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="8dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvGuideServiceEntry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_ellipse"
                            android:text="Entry Ticket"
                            android:textColor="#4f4f4f"
                            android:paddingLeft="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:drawablePadding="8dp"/>
                        <TextView
                            android:id="@+id/tvGuideServicePlus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:textColor="#4f4f4f"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:text="+"/>
                        <TextView
                            android:id="@+id/tvGuideServiceTicketNumber"
                            android:text="0"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:textColor="#4f4f4f"
                            android:gravity="center"
                            android:layout_toLeftOf="@id/tvGuideServicePlus"/>
                        <TextView
                            android:id="@+id/tvGuideServiceMinus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:textColor="#4f4f4f"
                            android:gravity="center"
                            android:text="-"
                            android:layout_toLeftOf="@id/tvGuideServiceTicketNumber"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*additional charge"
                            android:textColor="#FF3311"
                            android:paddingLeft="24dp"
                            android:layout_below="@id/tvGuideServiceEntry"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_car_large"
                        android:text="Transport Services"
                        android:textColor="#4f4f4f"
                        android:gravity="center"
                        android:padding="8dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow_up"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_ellipse"
                        android:text="City Car"
                        android:textColor="#4f4f4f"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_ellipse"
                        android:text="Mini bus"
                        android:textColor="#4f4f4f"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="8dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>