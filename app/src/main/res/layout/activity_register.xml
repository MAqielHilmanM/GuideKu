<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".screen.register.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register to Guideku"
            android:textSize="20sp"
            android:textColor="#9CBF1F"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join us to get"
            android:textSize="18sp"
            android:textColor="#888"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Benefit!"
            android:textSize="18sp"
            android:textColor="#888"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etRegisterFName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorEditText"
            android:hint="First Name"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:padding="8dp" />
        <EditText
            android:id="@+id/etRegisterLName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:background="@color/colorEditText"
            android:hint="Last Name"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:padding="8dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/etRegisterUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorEditText"
        android:hint="Username"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:padding="8dp" />
    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorEditText"
        android:hint="Email"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        android:padding="8dp" />
    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorEditText"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#3BB2BF"
        android:text="CREATE AN ACCOUNT" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="have account?"
            android:textSize="13sp"
            android:textColor="#888"/>

        <TextView
            android:id="@+id/tvRegisterLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Login"
            android:textColor="#517309"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>