<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.setting.SettingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/tvSettingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="JohnDoe"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/tvSettingEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="JohnDoe@john.doe"
                android:textSize="12sp"
                android:layout_below="@id/tvSettingName"
                android:textColor="@color/colorSubtitle"/>
            <TextView
                android:id="@+id/tvSettingPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="081234567890"
                android:textSize="12sp"
                android:layout_below="@id/tvSettingEmail"
                android:textColor="@color/colorSubtitle"/>
            <Button
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:text="Edit Profile"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@color/colorAccent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Logout"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>
</FrameLayout>