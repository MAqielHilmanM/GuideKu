<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item xmlns:android="http://schemas.android.com/apk/res/android" android:state_enabled="true">
        <shape>
            <solid android:color="@color/colorCardHighlight" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                />
        </shape>
    </item>
    <item xmlns:android="http://schemas.android.com/apk/res/android" android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorIndicator" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                />
        </shape>
    </item>
</selector>